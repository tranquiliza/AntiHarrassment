        <NavLink class="white-text waves-effect waves-light" ActiveClass="blue" href="tutorialVideos" Match="NavLinkMatch.Prefix">Tutorial Videos</NavLink>
    </li>

    @if (userService.IsUserAdmin)
    {
        <li><div class="divider blue"></div></li>
        <li><a class="subheader blue-text">Admin Menu</a></li>
        <li><div class="divider blue"></div></li>
        <li>
            <NavLink class="white-text waves-effect waves-light" ActiveClass="blue" href="admin/channels" Match="NavLinkMatch.All">Channels</NavLink>
        </li>
        <li>
            <NavLink class="white-text waves-effect waves-light" ActiveClass="blue" href="admin/tags" Match="NavLinkMatch.All">Tags</NavLink>
        </li>
        <li>
            <NavLink class="white-text waves-effect waves-light" ActiveClass="blue" href="admin/statistics" Match="NavLinkMatch.All">System Statistics</NavLink>
        </li>
        <li>
            <NavLink class="white-text waves-effect waves-light" ActiveClass="blue" href="admin/unconfirmedSources/suspensions" Match="NavLinkMatch.All">Unconfirmed Source Suspensions</NavLink>
        </li>
    }
</ul>

@code {
    protected override void OnInitialized()
    {
        userService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        userService.OnChange -= StateHasChanged;
    }
}
